<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListCongViec.QuenMatKhau">
    <ScrollView>
        <StackLayout Margin="0,20,0,0">
            <Label Text="Mật khẩu cũ" FontSize="20" TextColor="Black" />
            <Entry Placeholder="Mời nhập mật khẩu cũ"/>
            <Label Text="Mật khẩu mới" FontSize="20" TextColor="Black"/>
            <Entry Placeholder="Mời nhập mật khẩu mới" />
            <Label Text="Xác nhận mật khẩu mới" FontSize="20" TextColor="Black" />
            <Entry Placeholder="Mời nhập lại mật khẩu mới" />
            <Button Text="Xác nhận" Margin="50,0,50,0" Clicked="ButtonXacNhan_Clicked"/>
            <Button Text="Hủy" Margin="50,0,50,0" Clicked="ButtonHuy_Clicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>